---
interface Props {
	title?: string;
	description?: string;
}

const { title = 'CV', description = 'Curriculum vitae' } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1" />
		<title>{title}</title>
		<meta name="description" content={description} />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link rel="icon" href="/favicon.ico" />
		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<link
			href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&display=swap"
			rel="stylesheet"
		/>
		<style>
			:root {
				color-scheme: light;
			}
			* {
				box-sizing: border-box;
			}
			body {
				margin: 0;
				padding: 2rem 1.25rem 3rem;
				color: #0f172a;
				font-family: 'Inter', system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
				line-height: 1.6;
			}
			.cv-shell {
				max-width: 860px;
				margin: 0 auto;
			}
			.cv-actions {
				margin: 0 0 1rem;
				text-align: right;
			}
			.cv-actions a {
				display: inline-block;
				padding: 0.35rem 0.75rem;
				border: 1px solid #cbd5e1;
				border-radius: 6px;
				color: #0f172a;
				text-decoration: none;
				font-size: 0.92rem;
				font-weight: 600;
			}
			main {
				max-width: none;
				margin: 0;
			}
			main :global(table) {
				width: 100%;
				border-collapse: separate;
				border-spacing: 0 0.3rem;
			}
			main :global(thead) {
				display: none;
			}
			main :global(th),
			main :global(td) {
				padding: 0;
				text-align: left;
				vertical-align: top;
			}
			main :global(th:first-child),
			main :global(td:first-child) {
				width: 6rem;
				padding-right: 1.5rem;
				white-space: nowrap;
			}
			@media print {
				body {
					font-size: 11pt;
					line-height: 1.4;
				}

				a {
					color: black;
					text-decoration: none;
				}

				header,
				nav,
				footer,
				.no-print {
					display: none !important;
				}

				main {
					max-width: none;
					margin: 0;
					padding: 0;
				}

				h1,
				h2,
				h3 {
					page-break-after: avoid;
				}

				section {
					page-break-inside: avoid;
				}
			}
		</style>
	</head>
	<body>
		<div class="cv-shell">
			<p class="no-print cv-actions">
				<a href="#" onclick="window.print(); return false;">Download PDF</a>
			</p>
			<main>
				<slot />
			</main>
		</div>
	</body>
</html>
