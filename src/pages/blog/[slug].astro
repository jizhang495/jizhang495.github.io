---
import SiteLayout from '../../layouts/SiteLayout.astro';
import PostLayout from '../../layouts/PostLayout.astro';
import { getPrevNext, getPublishedPosts } from '../../lib/posts';

export async function getStaticPaths() {
	const posts = await getPublishedPosts();
	return posts.map((post) => ({
		params: { slug: post.slug },
		props: {
			post,
			prevNext: getPrevNext(posts, post.slug)
		}
	}));
}

const { post, prevNext } = Astro.props;
const { prev, next } = prevNext;
const { Content } = await post.render();
const previous = prev;
const nextPost = next;
---

<SiteLayout title={`${post.data.title} · jz's Blog`} description={post.data.description}>
	<PostLayout
		title={post.data.title}
		description={post.data.description}
		published={post.data.published}
		updated={post.data.updated}
		tags={post.data.tags}
	>
		<Content />

		<nav slot="post-nav" class="post-nav" aria-label="Previous and next posts">
			{previous ? (
				<a class="nav-link previous" href={`/blog/${previous.slug}/`}>
					<span class="label">← Previous</span>
					<span class="title">{previous.data.title}</span>
				</a>
			) : (
				<div />
			)}
			{nextPost ? (
				<a class="nav-link next" href={`/blog/${nextPost.slug}/`}>
					<span class="label">Next →</span>
					<span class="title">{nextPost.data.title}</span>
				</a>
			) : (
				<div />
			)}
		</nav>
	</PostLayout>
</SiteLayout>

<style>
	.post-nav {
		margin-top: 0;
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(240px, 1fr));
		gap: 1rem;
	}
	.nav-link {
		display: flex;
		flex-direction: column;
		padding: 0;
		border: none;
		border-radius: 0;
		background: transparent;
		box-shadow: none;
	}
	.nav-link.next {
		text-align: right;
		align-items: flex-end;
	}
	.nav-link:hover {
		text-decoration: none;
	}
	.label {
		color: #475569;
		font-size: 0.95rem;
	}
	.title {
		color: #0f172a;
		font-weight: 600;
		margin-top: 0.25rem;
		text-decoration: underline;
	}
</style>
